<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f000000">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/theme_margin"
        android:layout_marginLeft="@dimen/theme_margin"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/tv_status1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="正常"
            android:textColor="@color/color333"
            android:textSize="@dimen/text_size_16" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorccc" />
        <TextView
            android:id="@+id/tv_status2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="全面"
            android:textColor="@color/color333"
            android:textSize="@dimen/text_size_16" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorccc" />
        <TextView
            android:id="@+id/tv_status3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="特殊"
            android:textColor="@color/color333"
            android:textSize="@dimen/text_size_16" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorccc" />
        <TextView
            android:id="@+id/tv_status4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="熄灯"
            android:textColor="@color/color333"
            android:textSize="@dimen/text_size_16" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorccc" />
    </LinearLayout>
</RelativeLayout>