<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include layout="@layout/view_titlebar" />

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/theme_margin"
                    android:gravity="center"
                    android:text="名称："
                    android:textColor="@color/color333"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/theme_margin"
                    android:layout_marginRight="@dimen/theme_margin"
                    android:layout_toRightOf="@+id/tv_name_title"
                    android:gravity="center"
                    android:text="变电站"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/text_size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorccc" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_status_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/theme_margin"
                    android:gravity="center"
                    android:text="状态："
                    android:textColor="@color/color333"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/theme_margin"
                    android:layout_marginRight="@dimen/theme_margin"
                    android:layout_toRightOf="@+id/tv_status_title"
                    android:gravity="center"
                    android:text="正常"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/text_size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorccc" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_tour_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_centerInParent="true"
                    android:text="巡视反馈"
                    android:background="@drawable/bg_add_tour_btn"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/color_white"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorccc" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_record_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/theme_margin"
                    android:layout_marginRight="@dimen/theme_margin"
                    android:layout_toRightOf="@+id/tv_status_title"
                    android:gravity="center"
                    android:text="历史巡视记录"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/text_size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorccc" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>